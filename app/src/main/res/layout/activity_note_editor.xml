<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <EditText
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        style="@style/Widget.AppCompat.EditText"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:hint="Gimme your title"
        android:layout_below="@+id/app_toolbar"/>

    <com.watchmecoding.eazynote.activity.LinedEditText
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:ems="10"
        android:gravity="top"
        android:hint="Just start writing..."
        android:inputType="textMultiLine"
        android:lineSpacingExtra="4dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textColorHint="#e2e2e2" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:titleTextColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/save_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_save_white_48dp"
            android:clickable="true"
            android:elevation="8dp"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_delete_white_48dp"
            android:clickable="true"
            android:elevation="8dp"/>

    </android.support.v7.widget.Toolbar>




</RelativeLayout>